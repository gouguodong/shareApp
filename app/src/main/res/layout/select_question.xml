<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/cadetblue"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/question_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="1、"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/question_describe"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="在一个长度为n的顺序线性表中顺序查找值为x的元素时，查找成功时的平均查找长度（即x与元素的平均比较次数，假定查找每个元素的概率都相等）为"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/question_your_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/kuohao"
            android:gravity="center"
            android:text=""
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_a_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_question_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="A、"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/question_a_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="在一个长度为n的顺序线性表中顺序查找值为x的元素"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dimgray" />

    <LinearLayout
        android:id="@+id/question_b_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_question_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="B、"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/question_b_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="在一个长度为n的顺序线性表中顺序查找值为x的元素"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dimgray" />

    <LinearLayout
        android:id="@+id/question_c_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_question_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="C、"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/question_c_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="在一个长度为n的顺序线性表中顺序查找值为x的元素"
            android:textSize="16sp" />
\
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dimgray" />

    <LinearLayout
        android:id="@+id/question_d_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_question_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="D、"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/question_d_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="在一个长度为n的顺序线性表中顺序查找值为x的元素"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>