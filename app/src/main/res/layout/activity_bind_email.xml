<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.jeff.shareapp.ui.login.LoginActivity">

    <include layout="@layout/title_bar_layout" />



    <EditText
        android:id="@+id/bind_email_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:inputType="number"
        android:hint="邮箱地址"
        android:background="@drawable/edit_text_view_bg"
        android:padding="15dp"
        android:singleLine="true"
        android:textColorHint="@color/darkgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/bind_email_verification_code"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="验证码"
            android:background="@drawable/edit_text_view_bg"
            android:padding="15dp"
            android:singleLine="true"
            android:textColorHint="@color/darkgray" />
        <TextView
            android:id="@+id/bind_email_get_verification_code_btn"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="获取验证码"
            android:background="@drawable/round_conner_line_btn_bg"
            android:padding="15dp"
            android:singleLine="true"
            android:textColorHint="@color/main_blue" />
    </LinearLayout>

    <Button
        android:id="@+id/bind_email_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/blue_round_button_bg"
        android:padding="10dp"
        android:text="绑定邮箱"
        android:textColor="@color/white"
        android:textSize="25sp" />



</LinearLayout>
