<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jeff.shareapp.ui.index.ResourceUploadActivity">

    <include layout="@layout/title_bar_layout" />

    <EditText
        android:id="@+id/upload_resource_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_view_bg"
        android:hint="请输入资源名称"
        android:padding="13dp"
        android:textSize="14sp"
        android:textColor="@color/dimgray" />

    <Spinner
        android:id="@+id/upload_resource_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_conner_line_btn_bg"
        android:padding="13dp"
        android:textSize="14sp"
        android:textColor="#696969" >

    </Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/upload_resource_describe"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_view_bg"
        android:hint="请输入资源描述"
        android:padding="13dp"
        android:textSize="14sp"
        android:textColor="@color/dimgray" />
    </LinearLayout>

    <TextView
        android:id="@+id/upload_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_conner_line_btn_bg"
        android:clickable="true"
        android:textSize="14sp"
        android:padding="13dp"
        android:gravity="center"
        android:text="上传文件"
        android:textColor="@color/main_blue" />

    <TextView
        android:id="@+id/upload_finish_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/blue_round_button_bg"
        android:textSize="18sp"
        android:padding="13dp"
        android:gravity="center"
        android:text="完        成"
        android:textColor="@color/white" />
</LinearLayout>
