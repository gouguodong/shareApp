<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:makeramen="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.jeff.shareapp.ui.myPage.SettingActivity">


    <include
        layout="@layout/title_bar_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/my_page_user_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_default_head_pic"
            makeramen:riv_corner_radius="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_page_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="张武"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/my_page_user_telephone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="158****1234"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/logout_btn"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_round_button_bg"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="注   销"/>

</LinearLayout>
